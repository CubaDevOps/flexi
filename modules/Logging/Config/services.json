{
  "services": [
    {
      "name": "logger",
      "class": {
        "name": "CubaDevOps\\Flexi\\Contracts\\Classes\\PsrLogger",
        "arguments": [
          "@CubaDevOps\\Flexi\\Contracts\\Interfaces\\LogRepositoryInterface",
          "@CubaDevOps\\Flexi\\Contracts\\Interfaces\\ConfigurationInterface"
        ]
      }
    },
    {
      "name": "CubaDevOps\\Flexi\\Contracts\\Interfaces\\LogRepositoryInterface",
      "class": {
        "name": "CubaDevOps\\Flexi\\Modules\\Logging\\Infrastructure\\Persistence\\InFileLogRepository",
        "arguments": [
          "ENV.log_file_path",
          "ENV.log_format"
        ]
      }
    }
  ]
}
