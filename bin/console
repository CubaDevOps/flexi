#!/usr/bin/env php
<?php
declare(strict_types=1);

ob_start();

use Flexi\Infrastructure\Ui\Cli\ConsoleApplication;
use Flexi\Infrastructure\Ui\Cli\ConsoleOutputFormatter;

require_once dirname(__DIR__) . "/vendor/autoload.php";

if (PHP_SAPI !== "cli") {
    throw new \RuntimeException("This script is only accessed from terminal");
}

ConsoleApplication::run($argv);
echo PHP_EOL;
ConsoleApplication::printUsage();
