{
  "name": "cubadevops/flexi-module-auth",
  "description": "Authentication and Authorization module for Flexi Framework",
  "version": "1.0.0",
  "type": "flexi-module",
  "license": "MIT",
  "keywords": [
    "flexi",
    "module",
    "authentication",
    "authorization",
    "jwt",
    "basic-auth"
  ],
  "authors": [
    {
      "name": "Carlos Batista",
      "email": "info@carlosbatista.dev",
      "homepage": "https://carlosbatista.dev"
    }
  ],
  "require": {
    "php": ">=7.4",
    "cubadevops/flexi-contracts": "@dev",
    "firebase/php-jwt": "^6.10"
  },
  "autoload": {
    "psr-4": {
      "CubaDevOps\\Flexi\\Modules\\Auth\\": ""
    }
  },
  "extra": {
    "flexi": {
      "module-name": "Auth",
      "module-type": "infrastructure",
      "config-files": [
        "Config/credentials.json",
        "Config/routes.json",
        "Config/services.json"
      ],
      "provides": [
        "authentication",
        "authorization",
        "jwt-middleware",
        "basic-auth-middleware"
      ]
    }
  }
}
