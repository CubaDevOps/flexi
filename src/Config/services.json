{
  "services": [
    {
      "name": "CubaDevOps\\Flexi\\Contracts\\Interfaces\\ObjectBuilderInterface",
      "class": {
        "name": "CubaDevOps\\Flexi\\Infrastructure\\Classes\\ObjectBuilder",
        "arguments": [
          "@cache"
        ]
      }
    },
    {
      "name": "CubaDevOps\\Flexi\\Contracts\\Interfaces\\ConfigurationRepositoryInterface",
      "class": {
        "name": "CubaDevOps\\Flexi\\Infrastructure\\Classes\\ConfigurationRepository",
        "arguments": []
      }
    },
    {
      "name": "CubaDevOps\\Flexi\\Contracts\\Interfaces\\ConfigurationInterface",
      "class": {
        "name": "CubaDevOps\\Flexi\\Infrastructure\\Classes\\Configuration",
        "arguments": [
          "@CubaDevOps\\Flexi\\Contracts\\Interfaces\\ConfigurationRepositoryInterface"
        ]
      }
    },

    {
      "name": "CubaDevOps\\Flexi\\Infrastructure\\Factories\\RouterFactory",
      "class": {
        "name": "CubaDevOps\\Flexi\\Infrastructure\\Factories\\RouterFactory",
        "arguments": [
          "@session",
          "@CubaDevOps\\Flexi\\Infrastructure\\Bus\\EventBus",
          "@CubaDevOps\\Flexi\\Contracts\\Interfaces\\ObjectBuilderInterface",
          "@Psr\\Http\\Message\\ResponseFactoryInterface",
          "@container"
        ]
      }
    },
    {
      "name": "router",
      "alias": "CubaDevOps\\Flexi\\Infrastructure\\Factories\\RouterFactory"
    },
    {
      "name": "CubaDevOps\\Flexi\\Infrastructure\\Bus\\CommandBus",
      "factory": {
        "class": "CubaDevOps\\Flexi\\Infrastructure\\Factories\\BusFactory",
        "method": "createCommandBus",
        "arguments": [
          "@container",
          "./src/Config/commands.json"
        ]
      }
    },
    {
      "name": "CubaDevOps\\Flexi\\Infrastructure\\Bus\\QueryBus",
      "factory": {
        "class": "CubaDevOps\\Flexi\\Infrastructure\\Factories\\BusFactory",
        "method": "createQueryBus",
        "arguments": [
          "@container",
          "./src/Config/queries.json"
        ]
      }
    },
    {
      "name": "CubaDevOps\\Flexi\\Infrastructure\\Bus\\EventBus",
      "factory": {
        "class": "CubaDevOps\\Flexi\\Infrastructure\\Factories\\BusFactory",
        "method": "createEventBus",
        "arguments": [
          "@container",
          "./src/Config/listeners.json"
        ]
      }
    },
    {
      "name": "CubaDevOps\\Flexi\\Contracts\\Interfaces\\EventBusInterface",
      "alias": "CubaDevOps\\Flexi\\Infrastructure\\Bus\\EventBus"
    },
    {
      "name": "Psr\\Http\\Message\\ResponseFactoryInterface",
      "class": {
        "name": "GuzzleHttp\\Psr7\\HttpFactory",
        "arguments": []
      }
    },
    {
      "name": "Psr\\Http\\Message\\ServerRequestFactoryInterface",
      "class": {
        "name": "GuzzleHttp\\Psr7\\HttpFactory",
        "arguments": []
      }
    },
    {
      "glob": "./modules/*/Config/services.json"
    }
  ]
}
